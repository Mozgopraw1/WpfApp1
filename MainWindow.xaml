<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="EnglishAssistent" Height="350" Width="525"
        Icon="united-kingdom-flag-16x16.ico">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="316*"/>
            <ColumnDefinition Width="201*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="Button1" Content="Проверка" HorizontalAlignment="Left" Margin="80.392,63,0,0" VerticalAlignment="Top" Width="98" Click="Button1_Click" Grid.Column="1"/>
        <Button x:Name="Button2" Content="Потвердить" HorizontalAlignment="Left" Margin="80.392,96,0,0" VerticalAlignment="Top" Width="98" Click="Button2_Click" Grid.Column="1"/>
        <Button x:Name="Button3" Content="Добавить слово" HorizontalAlignment="Left" Margin="80.392,129,0,0" VerticalAlignment="Top" Width="98" Click="Button3_Click" Grid.Column="1"/>
        <TextBox x:Name="TextBox1" HorizontalAlignment="Left" Height="23" Margin="43,93,0,0" TextWrapping="Wrap" Text="Английское слово" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="TextBox2" HorizontalAlignment="Left" Height="23" Margin="43,126,0,0" TextWrapping="Wrap" Text="Перевод" VerticalAlignment="Top" Width="120"/>
        <TextBlock x:Name="TextBlock1" HorizontalAlignment="Left" Margin="20,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="17" Width="421" Grid.ColumnSpan="2"/>
        <TextBlock x:Name="TextBlock2" HorizontalAlignment="Left" Margin="20,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="-0.107,-1.336" Width="421" Height="17" Grid.ColumnSpan="2"/>
        <Button x:Name="Da" Content="Да" HorizontalAlignment="Left" Margin="43,169,0,0" VerticalAlignment="Top" Width="55" Click="Da_Click"/>
        <Button x:Name="Net" Content="Нет" HorizontalAlignment="Left" Margin="108,169,0,0" VerticalAlignment="Top" Width="55" Click="Net_Click"/>

    </Grid>
</Window>
